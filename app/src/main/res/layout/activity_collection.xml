<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.CollectionActivity">

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/base_dimen_0"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="收藏"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/tv_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cb_doload"
            android:padding="@dimen/base_dimen_0"
            android:text="编辑"
            android:textColor="@color/color333"
            android:textSize="@dimen/textsize16" />
        <CheckBox
            android:id="@+id/cb_doload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomCheckBoxTheme"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/base_dimen_0"
            />
    </RelativeLayout>

    <org.yczbj.ycrefreshviewlib.view.YCRefreshView
        android:id="@+id/onceTask_member_ycView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rela_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/lin_caozuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividing_line_backgroud" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/base_dimen_0">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/color333"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/base_dimen_30"
                android:background="@color/dividing_line_backgroud" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_red"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>