<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.ProjectActivity">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_150"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constran1"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_dimen_140"
        android:layout_marginLeft="@dimen/base_dimen_1"
        android:layout_marginRight="@dimen/base_dimen_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/backgroud_button_getcode"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:layout_constraintBottom_toTopOf="@+id/iv_title"
        android:layout_marginTop="@dimen/base_dimen_110"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_0"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_dimen_0"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="@+id/constran1"
            app:layout_constraintRight_toRightOf="@+id/constran1"/>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_0"
            android:layout_marginBottom="@dimen/base_dimen_0"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content">

            <View
                android:layout_width="@dimen/base_dimen_70"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/base_dimen_0"
                android:background="@color/dividing_line_backgroud"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color6666"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="@dimen/base_dimen_70"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/base_dimen_0"
                android:layout_gravity="center"
                android:background="@color/dividing_line_backgroud"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>