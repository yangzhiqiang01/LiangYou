<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333"
                android:textSize="@dimen/text_size_20"
                android:layout_margin="@dimen/base_dimen_0"
                android:text="@string/my"/>
            <include layout="@layout/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inhim.pj.view.CircleImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/base_dimen_80"
                    android:layout_height="@dimen/base_dimen_80"
                    android:src="@mipmap/ic_launcher"
                    android:layout_margin="@dimen/base_dimen_0"/>

                <RelativeLayout
                    android:id="@+id/rela1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/base_dimen_0"
                        android:textSize="@dimen/textsize16"
                        android:text="@string/user_nicheng" />

                    <TextView
                        android:id="@+id/me_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_username"
                        android:layout_margin="@dimen/base_dimen_0"
                        android:drawablePadding="@dimen/base_dimen_0"
                        android:textSize="@dimen/text_size_20"
                        android:text="老王" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/base_dimen_0"
                        android:src="@mipmap/rown_more" />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/dividing_line" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_dimen_15"
                android:layout_marginTop="@dimen/base_dimen_15">

                <LinearLayout
                    android:id="@+id/lin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/jibenziliao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_5dp"
                        android:text="@string/basic_information"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/base_dimen_5"
                    android:background="@color/dividing_line_backgroud"
                    app:layout_constraintLeft_toRightOf="@+id/lin_1"
                    app:layout_constraintRight_toLeftOf="@+id/lin_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:id="@+id/lin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/shoucang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_5dp"
                        android:text="@string/collection"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/base_dimen_5"
                    android:background="@color/dividing_line_backgroud"
                    app:layout_constraintLeft_toRightOf="@+id/lin_2"
                    app:layout_constraintRight_toLeftOf="@+id/lin_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:id="@+id/lin_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/lishi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_5dp"
                        android:text="@string/history"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <include layout="@layout/dividing_line" />

            <LinearLayout
                android:id="@+id/lin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/base_dimen_0"
                    android:src="@mipmap/dowloadlist" />

                <TextView
                    android:id="@+id/dowload_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/download_list"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/base_dimen_0"
                    android:src="@mipmap/rown_more" />
            </LinearLayout>

            <include layout="@layout/dividing_line3" />
            <LinearLayout
                android:id="@+id/lin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/base_dimen_0"
                    android:src="@mipmap/setting" />

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/setting"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/base_dimen_0"
                    android:src="@mipmap/rown_more" />
            </LinearLayout>

            <include layout="@layout/dividing_line3" />

            <LinearLayout
                android:id="@+id/lin_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/base_dimen_0"
                    android:src="@mipmap/update" />

                <TextView
                    android:id="@+id/mygrades"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/check_update"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_15"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/color999"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/lin_kj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_0"
                    android:gravity="center_vertical"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/base_dimen_0"
                    android:src="@mipmap/rown_more" />
            </LinearLayout>

            <include layout="@layout/dividing_line3" />

                <LinearLayout
                    android:id="@+id/lin_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/base_dimen_0"
                        android:src="@mipmap/about" />

                    <TextView
                        android:id="@+id/mycollection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/base_dimen_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/about_us"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/base_dimen_0"
                        android:src="@mipmap/rown_more" />
                </LinearLayout>

                <include layout="@layout/dividing_line3" />

                <LinearLayout
                    android:id="@+id/lin_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/base_dimen_0"
                        android:src="@mipmap/fenxaing" />

                    <TextView
                        android:id="@+id/myactivities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/base_dimen_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/share_app"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/base_dimen_0"
                        android:src="@mipmap/rown_more" />
                </LinearLayout>

                <include layout="@layout/dividing_line" />

            <Button
                android:id="@+id/btn_back_login"
                style="@style/btn_logout_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_dimen_0"
                android:text="@string/exit_login" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>