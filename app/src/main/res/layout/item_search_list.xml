<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lin_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/base_dimen_0"
        android:layout_marginRight="@dimen/base_dimen_0"
        android:background="@color/dividing_line_backgroud"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/history_date"
        android:textSize="@dimen/text_size_14"
        android:padding="@dimen/base_dimen_0"
        android:drawablePadding="@dimen/base_dimen_0"
        android:layout_margin="1dp"
        />
</LinearLayout>