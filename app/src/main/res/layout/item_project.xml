<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constran">

        <com.inhim.pj.view.CustomRoundAngleImageView
            android:id="@+id/iv_title"
            android:layout_width="@dimen/base_dimen_110"
            android:layout_height="@dimen/base_dimen_80"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:layout_marginLeft="@dimen/base_dimen_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/base_dimen_15"
            android:layout_marginBottom="@dimen/base_dimen_15"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_0"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/iv_title"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/iv_title"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_0"
            android:layout_marginBottom="@dimen/base_dimen_5dp"
            android:layout_toRightOf="@+id/iv_glasses"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/base_dimen_5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/base_dimen_0"
            app:layout_constraintBottom_toTopOf="@+id/tv_num"
            app:layout_constraintLeft_toRightOf="@+id/iv_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color6666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_title"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/base_dimen_0"
            app:layout_constraintLeft_toRightOf="@+id/iv_title"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/dividing_line_backgroud"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Orientation" />
</android.support.constraint.ConstraintLayout>
