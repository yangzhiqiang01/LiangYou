<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constran"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_100"
        android:layout_marginTop="@dimen/base_dimen_0"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.inhim.pj.view.CustomRoundAngleImageView
            android:id="@+id/iv_title"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:layout_marginLeft="@dimen/base_dimen_0"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_0"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/iv_title"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_0"
            android:layout_marginBottom="@dimen/base_dimen_5dp"
            android:layout_toRightOf="@+id/iv_glasses"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/base_dimen_5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/base_dimen_0"
            app:layout_constraintBottom_toTopOf="@+id/tv_num"
            app:layout_constraintLeft_toRightOf="@+id/iv_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_0"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color6666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/base_dimen_0"
        android:layout_marginTop="@dimen/base_dimen_0"
        android:layout_marginRight="@dimen/base_dimen_0"
        android:background="@color/dividing_line_backgroud"
        app:layout_constraintTop_toBottomOf="@+id/constran"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
